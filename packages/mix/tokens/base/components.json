{
  "button-padding": {
    "value": ".8rem 1.5rem"
  },
  "component": {
    "btn": {
      "padding": {
        "value": "{button-padding.value}"
      },
      "font-size": {
        "value": ".95rem"
      },
      "color": {
        "value": "{color.white.value}"
      },
      "background-color": {
        "value": "{color.gray.value}"
      },
      "cursor": {
        "value": "pointer"
      },
      "border": {
        "value": "none"
      },
      "display": {
        "value": "inline-block"
      },
      "text-align": {
        "value": "center"
      },
      "hover": {
        "color": {
          "value": "transparentize({component.btn.color.value}, .20)"
        },
        "background-color": {
          "value": "transparentize({component.btn.background-color.value}, .20)"
        }
      },
      "blue": {
        "background-color": {
          "value": "{color.blue.value}"
        },
        "color": {
          "value": "{color.white.value}"
        }
      }
    }
  }
}
