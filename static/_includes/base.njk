<!DOCTYPE html>
<html lang="en">
  <head>
    {% block head %}
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    {% include "./partials/head.html" %}
    <!--  -->
    {% endblock %}
  </head>
  <body cz-shortcut-listen="true">
    {% block nav %}
    <div class="container-fluid bg-light">
      <nav>{% include "./views/nav.njk" %}</nav>
    </div>
    {% endblock %}

    <!-- header -->
    {% block header %}
    <header class="container">{% include "./views/header.njk" %}</header>
    {% endblock %}
    <!-- main content -->
    {% block main %}
    <main class="container">
      <div class="row">{% include './views/main.njk' %}</div>
    </main>
    {% endblock %}
    <!-- footer -->
    {% block footer %}
    <footer class="container ui-footer py-5" style="height:200px">
      {% include "./views/footer.njk" %}
    </footer>
    {% endblock %}
    <!-- scripts  -->
    {% include "./partials/footer-scripts.html" %}
  </body>
</html>
