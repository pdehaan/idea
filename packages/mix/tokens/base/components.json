{
  "button-padding": {
    "value": "0 1.5rem"
  },
  "component": {
    "btn": {
      "height": {
        "value": "2.5rem"
      },
      "padding": {
        "value": "{button-padding.value}"
      },
      "display": {
        "value": "inline-block"
      },
      "text-align": {
        "value": "center"
      },
      "background-color": {
        "value": "lightgray"
      },
      "transition": {
        "value": "all .2s"
      },
      "border": {
        "value": "none"
      },
      "hover": {
        "background-color": {
          "value": "darken({component.btn.background-color.value}, 5)"
        }
      },
      "focus": {
        "border": {
          "value": "none"
        },
        "outline": {
          "value": "none"
        }
      },
      "pill": {
        "border-radius": {
          "value": "9999rem"
        }
      },
      "rounded": {
        "border-radius": {
          "value": "0.31rem"
        }
      }
    }
  }
}
