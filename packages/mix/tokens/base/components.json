{
  "button-padding": {
    "value": "0 1.5rem"
  },
  "component": {
    "btn": {
      "height": {
        "value": "3rem"
      },
      "padding": {
        "value": "{button-padding.value}"
      },
      "font-size": {
        "value": ".95rem"
      },
      "line-height": {
        "value": "1.5"
      },
      "color": {
        "value": "{color.white.value}"
      },
      "background-color": {
        "value": "{color.gray.value}"
      },
      "cursor": {
        "value": "pointer"
      },
      "border": {
        "value": "none"
      },
      "display": {
        "value": "inline-block"
      },
      "text-align": {
        "value": "center"
      },
      "transition": {
        "value": "all .2s"
      },
      "hover": {
        "color": {
          "value": "transparentize({component.btn.color.value}, .20)"
        },
        "background-color": {
          "value": "transparentize({component.btn.background-color.value}, .20)"
        }
      },
      "blue": {
        "background-color": {
          "value": "{color.blue.value}"
        },
        "color": {
          "value": "{color.white.value}"
        }
      },
      "pill": {
        "border-radius": {
          "value": "9999rem !important"
        }
      }
    }
  }
}
